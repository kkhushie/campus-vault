datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}
model User {
  id      String @id @default(uuid())
  email   String @unique
  name    String?
  items   Item[]
}
enum ItemType {
  SALE
}

enum ItemStatus {
  ACTIVE
  ARCHIVED
}

model Item {
  id          String     @id @default(cuid())
  title       String
  description String?
  category    String
  condition   String
  price       Int

  type        ItemType   @default(SALE)
  status      ItemStatus @default(ACTIVE)

  imageUrls   String[]   @default([])

  owner       User       @relation(fields: [ownerId], references: [id])
  ownerId     String

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
